<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectGenderFragment">

    <include
        layout="@layout/top_bar_nav"
        app:layout_constraintBaseline_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/man_text_container"
    >

    <TextView
        android:id="@+id/man_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/man"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60sp"
        />

</RelativeLayout>

    <ImageButton
        android:id="@+id/man_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:src="@drawable/man"
        app:layout_constraintTop_toBottomOf="@+id/man_text_container"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/woman_text_container"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/woman"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60sp"
        />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/woman_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:src="@drawable/woman"
        app:layout_constraintTop_toBottomOf="@+id/woman_text_container"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        layout="@layout/bottom_bar_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>